<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="gone"
    android:id="@+id/captchaBox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <FrameLayout
        android:layoutDirection="ltr"
        android:id="@+id/imagesContainer"
        android:layout_gravity="center_horizontal"
        android:layout_width="325dp"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/puzzleBgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/puzzlePieceImage"
            android:layout_width="62.5dp"
            android:layout_height="53.75dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp" />
    </FrameLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layoutDirection="ltr"
        android:id="@+id/sliderContainer"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:background="@drawable/slider_background"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/sliderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بازل را به جایش برگردانید"
            android:textColor="#999"
            android:textSize="14sp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/sliderThumb"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_test"
            android:background="@drawable/thumb_background"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp" />
    </RelativeLayout>

</LinearLayout>